<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Form ubah data contact</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form method="post" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= contact._id %>"/>
        <input type="hidden" name="oldNama" value="<%=  contact.oldNama || contact.nama %>" />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input name="nama" type="text" class="form-control" id="nama" required value="<%= contact.nama %>" />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input name="email" Emaile="text" class="form-control" id="email" Emailria-describedby="emailHelp" required value="<%= contact.email %>" />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">No Hp</label>
          <input name="nohp" type="text" class="form-control" id="nohp" aria-describedby="emailHelp" required value="<%= contact.nohp %>" />
        </div>
        <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
      </form>
    </div>
  </div>
</div>
