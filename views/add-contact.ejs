<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Form tambah data contact</h2>
      <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.forEach(error => { %>
              <li><%= error.msg %> </li>
            <% }) %>
          </ul>
        </div>
      <% } %>
      <form method="post" action="/contact">
        <div class="mb-3">
          <label for="nama" class="form-label"
            >Nama</label>
          <input
            required
            name="nama"
            type="text"
            class="form-control"
            id="nama"
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label"
            >Email</label>
          <input
            required
            name="email"
          Emaile="text"
            class="form-control"
            id="email"
      Emailria-describedby="emailHelp"
          />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label"
            >No Hp</label>
          <input
            required
            name="nohp"
            type="text"
            class="form-control"
            id="nohp"
            aria-describedby="emailHelp"
          />
        </div>
        <button type="submit" class="btn btn-primary">Tambah Data Contact</button>
      </form>
    </div>
  </div>
</div>
